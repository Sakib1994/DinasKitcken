            <dd>
                @Html.DisplayFor(model => model.OrderPlaced)
            </dd>
        </dl>
    </div>
    <div class="col-xs-7">
                <h4>Products Ordered</h4>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Amount</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (ProductOrder product in Model.Products)
                        {
                            @Html.Partial("OrderSummary", product)
                        }
                    </tbody>
                </table>
            </div>
</div>