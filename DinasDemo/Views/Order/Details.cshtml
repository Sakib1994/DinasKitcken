            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.AddressLine1)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.AddressLine1)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Division)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Division)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.OrderTotal)
            </dt>
